<%- include('partials/head')%>
    
    
    <h1 class="title" style="text-align: center"><%= title %></h1>
    <div class="container">
      <a href="/add" type="button" class="btn btn-success">Add Item</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Amount</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => {%>
            <tr>
              <td><%=item.id%></td>
              <td><%=item.name%></td>
              <td><%=item.qty%></td>
              <td><%=item.amount%></td>
              <td>
                <a
                href="<%=`edit/${item.id}` %>"
                style="background-color: green; color: white; border: none"
                class="btn btn-success"
                >
                  Edit
              </a>
                <a  href="<%=`delete/${item.id}` %>" class="btn btn-success" style="background-color: red; color: white; border: none">
                  Delete
                </a>
              </td>
            </tr>
            <% });%>
        </tbody>
      </table>
    </div>
  </body>
</html>
<%- include('partials/footer')%>